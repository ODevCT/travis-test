{
  "name": "mytvsuper-sfm-gcp",
  "version": "1.0.0",
  "description": "API REST using NodeJS and KOA framework, typescript. TypeORM for SQL with class-validators. Middlewares JWT, CORS, Winston Logger.",
  "main": "dist/server.js",
  "scripts": {
    "watch-server": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "serve": "node dist/server.js",
    "build": "npm run tslint && npm run test && npm run build-ts",
    "start": "npm run serve",
    "heroku-postbuild": "npm run build",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "engines": {
    "node": "10.x.x",
    "npm": "6.x.x"
  },
  "author": "TVB New Media Group",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-jwt": "^3.3.0",
    "@types/koa-router": "^7.0.40",
    "@types/koa__cors": "^2.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.14.8",
    "@types/sinon": "^7.0.12",
    "@types/supertest": "^2.0.7",
    "chai": "^4.2.0",
    "mocha": "^10.2.0",
    "nodemon": "^1.19.1",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.2.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "class-validator": "^0.9.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.2.0",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0",
    "log4js": "^4.3.1",
    "mysql": "^2.17.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.18"
  }
}
